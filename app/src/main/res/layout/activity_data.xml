<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.and.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginTop="3dp"
        android:background="#44000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_1_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:padding="10dp"
            android:text="时间"
            android:textColor="#ff000000"
            android:textSize="12sp" />

        <View
            android:id="@+id/line_shu"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="#44000000" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:paddingTop="5dp"
            android:text="2016/2/07"
            android:textColor="#ff000000"
            android:textSize="12sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="#44000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:padding="10dp"
            android:text="......"
            android:textColor="#ff000000"
            android:textSize="12sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#44000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_2_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:padding="10dp"
            android:text="备注"
            android:textColor="#ff000000"
            android:textSize="12sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/tv_1_1"
            android:background="#44000000" />
        <TextView
            android:id="@+id/tv_ps"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:text="如身体不适，特殊情况等"
            android:textColor="#ff000000"
            android:textSize="12sp" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#44000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_data1"
                android:background="@drawable/recf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:padding="10dp"
                android:text="CD4"
                android:textColor="#ff000000"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/tv_data2"
                android:background="@drawable/recf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:padding="10dp"
                android:text="病毒重载"
                android:textColor="#ff000000"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/tv_data3"
                android:background="@drawable/recf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:padding="10dp"
                android:text="体重"
                android:textColor="#ff000000"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/tv_data4"
                android:background="@drawable/recf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:padding="10dp"
                android:text="并发症"
                android:textColor="#ff000000"
                android:textSize="12sp" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_1_1"
            android:background="#44000000" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/lv_data1"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:textSize="12sp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="上次数值"
                        android:textColor="#ffff0000"/>
                    <TextView
                        android:textSize="12sp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="  XXXXXXXXX"
                        android:textColor="#ffff0000"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#44000000"/>
                <LinearLayout
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:textSize="12sp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="上次数值"
                        android:textColor="#ffff0000"/>
                    <TextView
                        android:textSize="12sp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="  XXXXXXXXX"
                        android:textColor="#ffff0000"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#44000000"/>
                <LinearLayout
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:textSize="12sp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="上次数值"
                        android:textColor="#ffff0000"/>
                    <TextView
                        android:textSize="12sp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="  XXXXXXXXX"
                        android:textColor="#ffff0000"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#44000000"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lv_data2"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:textSize="12sp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="细菌性"
                        android:textColor="#ffff0000"/>
                    <EditText
                        android:textSize="12sp"
                        android:hint="请输入文字"
                        android:background="@drawable/recf2"
                        android:textColorHint="#ff000000"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="#ff000000"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#44000000"/>
                <LinearLayout
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:textSize="12sp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="病毒性"
                        android:textColor="#ffff0000"/>
                    <EditText
                        android:textSize="12sp"
                        android:hint="请输入文字"
                        android:background="@drawable/recf2"
                        android:textColorHint="#ff000000"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="#ff000000"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#44000000"/>
                <LinearLayout
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:textSize="12sp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="肿瘤性"
                        android:textColor="#ffff0000"/>
                    <EditText
                        android:textSize="12sp"
                        android:hint="请输入文字"
                        android:background="@drawable/recf2"
                        android:textColorHint="#ff000000"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="#ff000000"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#44000000"/>
            </LinearLayout>
        </FrameLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#44000000" />



</LinearLayout>
