<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    >

    <com.and.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="3dp"
        android:background="#11000000"
        android:orientation="horizontal">

        <EditText
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight="3"
            android:background="#66ffffff"
            android:singleLine="true"
            android:hint=" 输入症状、疾病、医院、科室、医生名"
            android:textColorHint="#44000000"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/recf"
            android:paddingLeft="10dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:clickable="false"
                android:focusable="false"
                android:src="@drawable/u22" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:clickable="false"
                android:focusable="false"
                android:text="搜索"
                android:textColor="#44000000"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:padding="10dp"
        android:background="#44000000"
        android:text="常见疾病"
        android:textSize="12sp"
        android:textColor="#ffffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_margin="10dp"
            android:background="@drawable/u15"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="肠胃炎"
            android:textColor="#44000000"
            android:textSize="10sp" />

        <Button
            android:layout_margin="10dp"
            android:background="@drawable/u15"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="咳嗽"
            android:textColor="#44000000"
            android:textSize="10sp" />

        <Button
            android:layout_margin="10dp"
            android:background="@drawable/u15"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="感冒"
            android:textColor="#44000000"
            android:textSize="10sp" />

        <Button
            android:layout_margin="10dp"
            android:background="@drawable/u15"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="发烧"
            android:textColor="#44000000"
            android:textSize="10sp" />
    </LinearLayout>

    <TextView
        android:padding="10dp"
        android:background="#44000000"
        android:text="按科室找医生"
        android:textSize="12sp"
        android:textColor="#ffffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <GridView
        android:background="#44000000"
        android:id="@+id/gv_doctor1"
        android:numColumns="4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></GridView>

</LinearLayout>

